{
  "name": "wyrihaximus/broadcast",
  "description": "âœ¨ Statically on composer install/update compiled (async) event dispatcher",
  "license": "MIT",
  "type": "composer-plugin",
  "require": {
    "php": "^8.3",
    "ext-json": "^8.3",
    "composer-plugin-api": "^2",
    "psr/container": "^1 || ^2",
    "psr/event-dispatcher": "^1",
    "psr/log": "^1.1 || ^2 || ^3",
    "react/async": "^4.3",
    "react/promise": "^3.2",
    "roave/better-reflection": "^6.26",
    "wyrihaximus/broadcast-contracts": "^1.3",
    "wyrihaximus/generative-composer-plugin-tooling": "^1.0.1"
  },
  "require-dev": {
    "pimple/pimple": "^3.5",
    "react/promise-timer": "^1.10",
    "the-orville/exceptions": "dev-master",
    "wyrihaximus/async-test-utilities": "^9.1.0",
    "wyrihaximus/makefiles": "^0.4.3",
    "wyrihaximus/phpstan-react": "^2.0.0"
  },
  "autoload": {
    "psr-4": {
      "WyriHaximus\\Broadcast\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "WyriHaximus\\Tests\\Broadcast\\": "tests"
    }
  },
  "config": {
    "allow-plugins": {
      "composer/package-versions-deprecated": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "drupol/composer-packages": true,
      "ergebnis/composer-normalize": true,
      "icanhazstring/composer-unused": true,
      "infection/extension-installer": true,
      "mindplay/composer-locator": true,
      "phpstan/extension-installer": true,
      "wyrihaximus/makefiles": true
    },
    "platform": {
      "php": "8.3.13"
    },
    "sort-packages": true
  },
  "extra": {
    "class": "WyriHaximus\\Broadcast\\Composer\\Installer",
    "wyrihaximus": {
      "broadcast": {
        "has-listeners": true
      }
    }
  },
  "scripts": {
    "post-install-cmd": [
      "composer normalize",
      "composer update --lock --no-scripts"
    ],
    "post-update-cmd": [
      "composer normalize",
      "composer update --lock --no-scripts"
    ],
    "pre-autoload-dump": [
      "WyriHaximus\\Broadcast\\Composer\\Installer::findEventListeners"
    ]
  }
}
